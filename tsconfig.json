{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "types": ["node", "next", "react", "react-dom"],
    "typeRoots": ["src/types", "node_modules/@types"],
    "pretty": true,
    "plugins": [
      { "name": "next" },
      { "name": "@next/bundle-analyzer" },
      { "name": "fork-ts-checker-webpack-plugin" },
      { "name": "next-security" },
      { "name": "@builder.io/partytown" },
      {
        "name": "next-transpile-modules",
        "options": {
          "modules": ["@company/design-system"]
        }
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@context/*": ["./src/context/*"],
      "@types/*": ["./src/types/*"],
      "@util/*": ["./src/util/*"],
      "@axios/*": ["./src/axios/*"],
      "@styles/*": ["./src/styles/*"],
      "@app/*": ["./src/app/*"],
      "@auth-forms/*": ["./src/app/(pages)/(auth)/*"],
      "@protected/*": ["./src/app/(pages)/(protected)/*"],
      "@public/*": ["./src/app/(pages)/(public)/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "flave(copy src)"]
}
