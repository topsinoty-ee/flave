{
  "name": "flave",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install",
    "find-copies": "jscpd src --min-lines 5 --min-tokens 30",
    "find-dead": "ts-prune | grep -v '(used in module)'",
    "check-deps": "depcheck",
    "fix-deps": "depcheck --json | jq -r '.missing | to_entries[] | .value[]' | xargs -r pnpm add",
    "analyze": "ANALYZE=true next build",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "test:update": "jest --updateSnapshot",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@builder.io/partytown": "^0.10.3",
    "@hookform/resolvers": "^4.1.3",
    "@types/js-cookie": "^3.0.6",
    "axios": "^1.8.3",
    "clsx": "^2.1.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.477.0",
    "next": "15.2.2",
    "next-security": "^1.1.1",
    "perfectionist": "2.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-hook-form": "^7.54.2",
    "sharp": "^0.33.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@next/bundle-analyzer": "15.2.2",
    "@tailwindcss/postcss": "^4.0.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.17.24",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "depcheck": "^1.4.7",
    "eslint": "^9.22.0",
    "eslint-config-next": "15.2.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.10.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^57.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jscpd": "^4.0.5",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.0.14",
    "ts-jest": "^29.2.6",
    "ts-prune": "^0.10.3",
    "typescript": "^5.8.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
